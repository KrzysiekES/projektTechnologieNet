@model IEnumerable<ProjektTechnologieNet.Models.Club>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Klubów</h2>

<p>
    @Html.ActionLink("Dodaj Klub", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nazwa
        </th>
        <th>
            Pojemność
        </th>
        <th>
            Trener
        </th>
        <th>
            Miasto
        </th>
        <th>
            Liga
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.capacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.couch)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.city)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.league)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.clubID }) |
            @Html.ActionLink("Pokaż", "Details", new { id=item.clubID }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.clubID })
        </td>
    </tr>
}

</table>
